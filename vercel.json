{
    "version": 2,
    "outputDirectory": "public",
    "rewrites": [
        {
            "source": "/api/:path*",
            "destination": "https://web-production-c67b3.up.railway.app/api/:path*"
        },
        {
            "source": "/((?!.*\\.[a-zA-Z0-9]+$).*)",
            "destination": "/index.html"
        }
    ],
    "headers": [
        {
            "source": "/(.*)\\.(js|css|png|jpg|jpeg|gif|svg|webp|ico|woff|woff2|json)",
            "headers": [
                {
                    "key": "Cache-Control",
                    "value": "public, max-age=31536000, immutable"
                }
            ]
        }
    ]
}